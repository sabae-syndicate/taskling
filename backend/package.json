{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "pnpm migrate up && tsc-watch --noClear --onCompilationStarted 'tsoa spec-and-routes' --onSuccess 'bash -c \"tsc-alias && node dist/index.js\"'",
    "build": "tsoa spec-and-routes && tsc -b && tsc-alias",
    "launch": "node dist/index.js",
    "migrate": "node-pg-migrate --migrations-dir db/migrations"
  },
  "dependencies": {
    "@scalar/api-reference": "^1.28.7",
    "@scalar/express-api-reference": "^0.6.3",
    "@tsoa/runtime": "^6.6.0",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~5.0.1",
    "helmet": "^8.1.0",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pg-promise": "^11.13.0",
    "tsoa": "^6.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.11",
    "node-pg-migrate": "^7.9.1",
    "tsc-alias": "^1.8.15",
    "tsc-watch": "^6.2.1",
    "typescript": "catalog:"
  }
}
